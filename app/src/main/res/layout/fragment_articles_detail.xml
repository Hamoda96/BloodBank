<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/article_detail_fragment_iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:layout_weight="2.5"
        android:background="@drawable/article_detail_shape">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_circle_white">

            <ImageView
                android:id="@+id/article_detail_fragment_iv_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/article_detail_fragment_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="طرق الواقايه من المرض "
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_red_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_18sdp"
            />
        <TextView
            android:id="@+id/article_detail_fragment_tv_article_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="طرق الواقايه من المرض "
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_red_hint"
            android:layout_below="@id/article_detail_fragment_tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"

            />
    </RelativeLayout>
</LinearLayout>