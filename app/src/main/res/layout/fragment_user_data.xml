<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_35sdp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_user_data_fragment_til_user_name"
            style="@style/TextInputLayoutLoginCycleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_user_regular"
                android:hint="@string/name" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_user_data_fragment_til_email"
            style="@style/TextInputLayoutLoginCycleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_user_data_fragment_til_birthday"
                style="@style/TextInputLayoutLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorTextAppearance="@style/Error">

                <TextView
                    android:id="@+id/edit_user_data_fragment_tv_birthday"
                    style="@style/EditTextLoginCycleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_calendar_week_solid"
                    android:hint="@string/birthday" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_user_data_fragment_til_last_donation_date"
                style="@style/TextInputLayoutLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:errorTextAppearance="@style/Error">

                <TextView
                    android:id="@+id/edit_user_data_fragment_tv_last_donation_date"
                    style="@style/EditTextLoginCycleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_calendar_week_solid"
                    android:hint="@string/last_donation" />

            </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            style="@style/TextInputLayoutLoginCycleStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:src="@drawable/ic_blood_drop" />

            <Spinner
                android:id="@+id/edit_user_data_fragment_sp_blood_types"
                style="@style/SpinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/TextInputLayoutLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:src="@drawable/ic_home_solid" />

                <Spinner
                    android:id="@+id/edit_user_data_fragment_sp_governments"
                    style="@style/SpinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_user_data_fragment_ll_container_city"
                style="@style/TextInputLayoutLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:src="@drawable/ic_home_solid" />

                <Spinner
                    android:id="@+id/edit_user_data_fragment_sp_city"
                    style="@style/SpinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_user_data_fragment_til_phone"
            style="@style/TextInputLayoutLoginCycleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_call"
                android:hint="@string/phone"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_user_data_fragment_til_password"
            style="@style/TextInputLayoutLoginCycleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock_solid"
                android:hint="@string/password" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_user_data_fragment_til_confirm_password"
            style="@style/TextInputLayoutLoginCycleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextLoginCycleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock_solid"
                android:hint="@string/confirm_password" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/edit_user_data_fragment_btn_register"
            style="@style/LoginCycleButtonStyle_2th"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/modify"
            android:textColor="@color/color_white"
            />
    </LinearLayout>

</ScrollView>