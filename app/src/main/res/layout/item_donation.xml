<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/donation_adapter_srl_item_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:background="@null"
    app:dragEdge="left"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_90sdp"
        android:gravity="center"
        android:layout_marginRight="@dimen/_2sdp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/donation_adapter_tv_call"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@null"
            android:src="@drawable/ic_call"
            />

        <ImageButton
            android:id="@+id/donation_adapter_tv_info"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@null"
            android:src="@drawable/ic_info_circle_solid"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_minus50sdp"
            android:layout_toLeftOf="@+id/donation_adapter_tv_blood_type"
            android:background="@drawable/donation_item_shape"
            android:orientation="vertical"

            android:gravity="center|left">

            <TextView
                android:id="@+id/donation_adapter_tv_name"
                style="@style/DonationTVStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:text="اسم الحالة : محمود حمودة "
                 />


            <TextView
                android:id="@+id/donation_adapter_tv_hospital"
                style="@style/DonationTVStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:text="اسم الحالة : محمود حمودة "
                 />


            <TextView
                android:id="@+id/donation_adapter_tv_city"
                style="@style/DonationTVStyle"
                android:layout_width="match_parent"
                android:textDirection="rtl"
                android:layout_height="wrap_content"
                android:text="اسم الحالة : محمود حمودة " />


        </LinearLayout>

        <TextView
            android:id="@+id/donation_adapter_tv_blood_type"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:text="B+"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_35ssp"
            android:textStyle="bold" />

    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>